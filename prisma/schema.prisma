generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  email         String    @unique
  password      String
  firstName     String
  lastName      String
  phone         String?
  emoji         String?   @default("ðŸ§‘")
  street        String?
  city          String?
  postalCode    String?
  country       String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  baskets       Basket[]
}

model Basket {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String   @db.ObjectId
  user        User     @relation(fields: [userId], references: [id])
  categories  Json     // Stores the categories and items
  totalPrice  Float
  totalItems  Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
